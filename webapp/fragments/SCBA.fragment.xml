<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:smarttable="sap.ui.comp.smarttable"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <smarttable:SmartTable id="scbaId"
        editable="{edit>/isEditable}"
        tableBindingPath="to_sitecontactbudgetapproval"
        app:useSmartField="true"
        initiallyVisibleFields="studyid,Sitecode,Contractid,Versionno,ContractSignedDate,BudgetApprovedDate,PaymentTerms,ApprovalNotes"
        entitySet="SCBudgetApproval"
        enableAutoBinding="true"
    >
        <smarttable:customToolbar>
            <Toolbar>
                <ToolbarSpacer />
                <Button
                    press="addAll"
                    icon="sap-icon://add"
                />
                <Button
                    enabled="false"
                    press="onDelete"
                    icon="sap-icon://delete"
                />
            </Toolbar>
        </smarttable:customToolbar>
        <Table
            mode="MultiSelect"
            selectionChange="onTableSelectionChange"
        />
    </smarttable:SmartTable>
</c:FragmentDefinition>